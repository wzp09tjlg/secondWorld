<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.wuzp.secondworld.view.widget.RotateImageView
            android:id="@+id/img_rotate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_back"
            android:scaleType="center"/>

        <EditText
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#080"/>
        <EditText
            android:id="@+id/edt_cipher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_content"
            android:textColor="#080"/>
        <Button
            android:id="@+id/btn_encode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_cipher"
            android:text="encode" />
        <Button
            android:id="@+id/btn_decode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_encode"
            android:text="decode" />
        <TextView
            android:id="@+id/text_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_decode"/>
    </RelativeLayout>
</layout>
